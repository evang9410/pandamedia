<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>bundles.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>
    <navigation-rule>        
        <navigation-case>
            <from-view-id>*</from-view-id>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>        
        <navigation-case>
            <from-view-id>*</from-view-id>
            <from-outcome>welcome_manager</from-outcome>
            <to-view-id>/manager_index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/mainpage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/userconnection/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/userconnection/registration.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cart</from-outcome>
            <to-view-id>/cart.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <!-- Secured pages navigation rules -->
        <navigation-case>
            <from-outcome>finalization</from-outcome>
            <to-view-id>/clientsecure/purchase/checkout.xhtml</to-view-id>
            <!-- Needs to be a redirect to pass through filter -->
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>invoicesummary</from-outcome>
            <to-view-id>/clientsecure/invoicesummary.xhtml</to-view-id>
            <!-- Needs to be a redirect to pass through filter -->
            <redirect />
        </navigation-case>
    </navigation-rule>   
</faces-config>